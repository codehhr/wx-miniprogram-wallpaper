/**app.wxss**/
.container {
  box-sizing: border-box;
}

.page-loading {
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5aa;
  position: fixed;
  top: 0;
  z-index: 9;
  display: flex;
  align-items: center;
  justify-content: center;
}
.hide-loading {
  display: none;
}

.img-list {
  padding: 0 8rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.img-item {
  position: relative;
  margin: 16rpx auto;
  box-shadow: 2px 2px 6px 4px #d6d6d6;
  border-radius: 8rpx;
  overflow: hidden;
}

.img-category-tag {
  position: absolute;
  bottom: 8rpx;
  left: 0;
  padding: 0 8rpx;
  background-image: linear-gradient(180deg, #f5f5f511, #88888822);
}
.img-category {
  color: #47a8f2;
  font-size: 0.8rem;
}
.img-tag {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #ffffff;
  font-size: 0.8rem;
}
